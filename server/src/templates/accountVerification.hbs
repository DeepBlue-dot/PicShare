<!-- templates/accountVerification.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Verify Your Account</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      line-height: 1.6;
      background-color: #f4f4f4;
      color: #333;
      margin: 0;
      padding: 20px;
    }

    .container {
      max-width: 600px;
      margin: 0 auto;
      padding: 30px;
      border-radius: 12px;
      background: #fff;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    h2 {
      color: #007bff;
      margin-bottom: 10px;
    }

    p {
      font-size: 16px;
      margin: 10px 0;
    }

    .button {
      display: inline-block;
      padding: 14px 24px;
      background: #007bff;
      color: #fff;
      text-decoration: none;
      font-size: 16px;
      font-weight: bold;
      border-radius: 6px;
      transition: background 0.3s ease;
    }

    .button:hover {
      background: #0056b3;
    }

    .link-box {
      background: #eef2f7;
      padding: 12px;
      border-radius: 6px;
      font-size: 14px;
      word-break: break-word;
    }

    .footer {
      margin-top: 20px;
      font-size: 14px;
      color: #777;
    }

    /* Responsive Design */
    @media (max-width: 600px) {
      .container {
        padding: 20px;
      }
      .button {
        padding: 12px 18px;
        font-size: 14px;
      }
    }
  </style>
</head>
<body>

  <div class="container">
    <h2>Welcome to {{company}}! ðŸ“¸</h2>
    <p>Hi <strong>{{name}}</strong>,</p>
    <p>Thank you for joining us! Please confirm your email to activate your account.</p>
    
    <p>
      <a href="{{verificationLink}}" class="button">Verify My Account</a>
    </p>

    <p>Or, copy and paste this link into your browser:</p>
    
    <p class="link-box">
      {{verificationLink}}
    </p>

    <div class="footer">
      <p>If you didnâ€™t sign up, you can safely ignore this email.</p>
    </div>
  </div>

</body>
</html>
